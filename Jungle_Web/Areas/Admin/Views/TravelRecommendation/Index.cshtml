@model IEnumerable<Jungle_Models.TravelRecommendation>

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Travel Recommendation</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="TravelRecommendation" asp-action="upsert" class="btn btn-success">
        <i class="fas fa-plus-circle"></i>&nbsp;Create New Travel Recommendation
      </a>
    </div>
  </div>

  <br /><br />
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width:100%">
      <thead class="bg-dark text-white">
        <tr>
          <th>
            Destination
          </th>
          <th>
            Region
          </th>
          <th>
            Country
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {

        <tr>
          <td width="35%">@item.Description</td>
          <td width="20%">@item.DangerLevel</td>
          <td width="15%">@item.Type</td>
          <td width="30%" class="text-center">
            <div class="w-75 btn-group" role="group">
              <a asp-controller="TravelRecommendation" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-warning mx-2">
                <i class="fas fa-edit"></i> &nbsp; Edit
              </a>
              <a asp-controller="TravelRecommendation" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                <i class="fas fa-trash-alt"></i> &nbsp; Delete
              </a>
            </div>
          </td>
        </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <p>No Travel Recommendation exists.</p>
  }
</div>